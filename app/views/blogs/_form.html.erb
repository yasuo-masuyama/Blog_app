<%= form_with(model: @blog, local: true, url: choose_new_or_edit ) do |form| %>
  <div class="blog_title">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="blog_content">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "ブログ一覧に戻る", blogs_path %>